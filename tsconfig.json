{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["es2017", "dom", "esnext"],
    "pretty": true,
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true, 
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "assets/*": ["packages/app/src/assets/*"],
      "common/*": ["packages/common/*"],
      "components/*": ["packages/app/src/components/*"]
    }
  }
}